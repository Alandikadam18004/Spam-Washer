<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:contentDescription="App Logo"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/appTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Spam Email Detection App"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#809AA9"
            android:textAlignment="center"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/appDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This app automatically scans your emails using advanced machine learning techniques to detect spam and filter them out. Developed as a final year project, it ensures a safe and clutter-free inbox experience."
            android:textSize="16sp"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Key Features:"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#809AA9"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Gmail integration\n• Dashboard\n• Spam classification using Naïve Bayes\n• Feedback system\n• User-friendly interface"
            android:textSize="15sp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Developer:"
            android:textColor="#809AA9"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Developed by Alandi Kadam\nInformation Technology Final Year Student\nat S.I.W.S College,Wadala"
            android:textSize="15sp"
            android:layout_marginBottom="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Version: 1.0"
            android:textSize="14sp"
            android:textAlignment="center" />
    </LinearLayout>
</ScrollView>
